<Window
    x:Class="Commissioner.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="{Binding ManualPairingCode}"></TextBlock>
            <Button Click="myButton_Click">Start Commissioning</Button>
            <Button Click="Button_Click">Stop</Button>
        </StackPanel>
    </Grid>
    
</Window>
